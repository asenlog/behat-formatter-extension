    "keywords": ["test", "behat", "formatter"],
    "homepage": "http://github.com/asenlog",
    "authors": [
        {
            "name": "Angelos Roussakis",
            "email": "aggelos.roussakis@gmail.com"
        },
        {
            "name": "Vasileios Poulios",
            "email": "vp.cubility@gmail.com"
